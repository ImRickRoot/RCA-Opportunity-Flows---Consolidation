<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Tests Opp_Admitted_BDO_Alert when stage changes to Admitted to Outpatient with BDO Region not Non-BDO.</description>
    <flowApiName>Opp_Admitted_BDO_Alert</flowApiName>
    <label>Opp Admitted BDO Alert - Admitted to Outpatient</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admitted to OP&quot;,&quot;StageName&quot;:&quot;Qualification&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;,&quot;BDO_Region__c&quot;:&quot;Southeast&quot;}</sobjectValue>
            </value>
        </parameters>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordUpdated</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admitted to OP&quot;,&quot;StageName&quot;:&quot;Admitted to Outpatient&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;,&quot;BDO_Region__c&quot;:&quot;Southeast&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.StageName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Admitted to Outpatient</stringValue>
                </rightValue>
            </conditions>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
