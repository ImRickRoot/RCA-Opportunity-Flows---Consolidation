<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Tests Set_Admission_Type_Opp when stage changes to Admitted to Outpatient with no prior admission - should set to First Time Admission.</description>
    <flowApiName>Set_Admission_Type_Opp</flowApiName>
    <label>Set Admission Type - Admitted to Outpatient</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admitted to OP&quot;,&quot;StageName&quot;:&quot;Qualification&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;,&quot;Admission_Date__c&quot;:&quot;2025-11-15&quot;}</sobjectValue>
            </value>
        </parameters>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordUpdated</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admitted to OP&quot;,&quot;StageName&quot;:&quot;Admitted to Outpatient&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;,&quot;Admission_Date__c&quot;:&quot;2025-11-15&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.StageName</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Admitted to Outpatient</stringValue>
                </rightValue>
            </conditions>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
