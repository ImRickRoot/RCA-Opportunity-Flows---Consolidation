<?xml version="1.0" encoding="UTF-8"?>
<FlowTest xmlns="http://soap.sforce.com/2006/04/metadata">
    <description>Tests Facility_Clearance_Required_Opp when discharge type is Administrative Discharge - should flag account for facility clearance.</description>
    <flowApiName>Facility_Clearance_Required_Opp</flowApiName>
    <label>Facility Clearance Required - Administrative Discharge</label>
    <testPoints>
        <elementApiName>Start</elementApiName>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordInitial</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admin Discharge&quot;,&quot;StageName&quot;:&quot;Admitted&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;}</sobjectValue>
            </value>
        </parameters>
        <parameters>
            <leftValueReference>$Record</leftValueReference>
            <type>InputTriggeringRecordUpdated</type>
            <value>
                <sobjectValue>{&quot;Name&quot;:&quot;Test Opportunity - Admin Discharge&quot;,&quot;StageName&quot;:&quot;Admitted&quot;,&quot;CloseDate&quot;:&quot;2025-12-31&quot;,&quot;Discharge_Datecc__c&quot;:&quot;2025-11-15&quot;,&quot;Discharge_Type__c&quot;:&quot;Administrative Discharge&quot;}</sobjectValue>
            </value>
        </parameters>
    </testPoints>
    <testPoints>
        <assertions>
            <conditions>
                <leftValueReference>$Record.Discharge_Type__c</leftValueReference>
                <operator>EqualTo</operator>
                <rightValue>
                    <stringValue>Administrative Discharge</stringValue>
                </rightValue>
            </conditions>
        </assertions>
        <elementApiName>Finish</elementApiName>
    </testPoints>
</FlowTest>
